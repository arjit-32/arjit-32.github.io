---
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'

interface Props {
  project: CollectionEntry<'projects'>
}

const { project } = Astro.props
---

<div class="group flex flex-col h-full bg-card rounded-xl border border-border p-5 transition-all hover:shadow-md hover:border-primary/50 relative">
  
    {/* GitHub Icon - Top Right */}
    {project.data.github && (
        <a 
            href={project.data.github} 
            target="_blank" 
            aria-label="View Source on GitHub"
            class="absolute top-4 right-4 z-20 p-2 bg-background/80 backdrop-blur-sm rounded-full border border-border text-muted-foreground hover:text-primary hover:scale-110 transition-all shadow-sm"
        >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-github"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
        </a>
    )}

  <div class="aspect-video w-full rounded-lg bg-muted/30 overflow-hidden mb-4 border border-border/50 flex items-center justify-center relative">
     {project.data.heroImage ? (
         <img src={project.data.heroImage} alt={project.data.title} class="object-cover w-full h-full" />
     ) : (
         <span class="text-4xl opacity-10">ðŸš€</span>
     )}
  </div>
  
  <h3 class="text-lg font-semibold mb-2 text-foreground">
    {project.data.title}
  </h3>
  
  <p class="text-sm text-muted-foreground line-clamp-2 mb-4">
    {project.data.description}
  </p>
    
  <div class="flex gap-3 text-sm font-medium mt-auto pt-4 border-t border-border/30">
       {project.data.link && (
         <a href={project.data.link} target="_blank" class="text-primary hover:underline flex items-center gap-1 transition-colors">
           Live Site
           <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-external-link"><path d="M15 3h6v6"/><path d="M10 14 21 3"/><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/></svg>
         </a>
       )}
       {project.data.articleLink && (
         <a href={project.data.articleLink} class="text-muted-foreground hover:text-foreground flex items-center gap-1 transition-colors">
           Article
           <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-book-open"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/></svg>
         </a>
       )}
  </div>
</div>
