---
import { cn } from '@/utils'

const { class: className, title } = Astro.props
---

<section class:list={[
	'w-full py-12 md:py-16 lg:py-20',
	'animate-fade-in',
	className
]}>
	<div class="container mx-auto px-4 sm:px-6 lg:px-8">
		<div class="animate-slide-up">
			<div class='mb-8'>
				<h2 class="text-4xl md:text-5xl font-bold tracking-tight">{title}</h2>
			</div>
			<div class='flex flex-col gap-y-3'>
				<slot />
			</div>
		</div>
	</div>
</section>
