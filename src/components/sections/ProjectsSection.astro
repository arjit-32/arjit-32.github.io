---
import { Image } from 'astro:assets';
import Section from '../Section.astro';
import highlightHeroImage from '@/assets/highlight-hero.jpg';
import dataInfinity from '@/assets/IMG_9205.jpeg';
import comingSoonImage from '@/assets/coming-soon.png';


const projects = [
  {
    title: "Highlight Hero",
    description: "A tool for beautifying code examples in blogs and Ed-tech websites.",
    techStack: ["JavaScript", "NodeJS"],
    image: highlightHeroImage,
    link: "https://github.com/arjit-32/highlight-hero"
  },
  {
    title: "Data Infinity UI Design",
    description: "A Phone listing website design from sketches till final designs",
    techStack: ["Figma", "UI/UX Design"],
    image: dataInfinity,
    link: "https://www.figma.com/design/SdjD5Rphv35VIbFRlkNBE2/Data-Infinity?t=f4ApBIUCtSwBEgln-1"
  },
  {
    title: "Canalys Website",
    description: "Companies' public website.",
    techStack: ["Javascript", "CSS", "NodeJs", "AWS"],
    image: comingSoonImage,
    link: "https://canalys.com/"
  },
  {
    title: "Candefero Website",
    description: "Social media for channel partners.",
    techStack: ["PHP", "AWS", "CSS"],
    image: comingSoonImage,
    link: "https://candefero.com/"
  }
];
---

<section id="projects" class="py-24 w-full">
  <Section title="Projects">
    <div class="flex flex-wrap gap-6 mt-8">
      {projects.map((project, index) => (
        <div 
          class="project-card group relative w-full sm:basis-[calc(50%-1rem)] lg:basis-[calc(33.333%-1rem)] min-w-[280px] max-w-[400px] flex flex-col rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-all bg-card border border-border"
          data-project-index={index}
        >
          <div class="relative w-full h-[220px] overflow-hidden">
            <Image 
              src={project.image} 
              alt={project.title}
              width={400}
              height={225}
              class="object-cover w-full h-full transition-transform group-hover:scale-105"
              style="aspect-ratio: 16/9;"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity flex items-end p-4">
              <a 
                href={project.link} 
                target="_blank" 
                rel="noopener noreferrer"
                class="px-4 py-2 bg-primary text-primary-foreground rounded-full text-sm font-medium inline-block hover:bg-primary/90"
              >
                View Project
              </a>
            </div>
          </div>
          
          <div class="p-6 flex flex-col flex-grow">
            <h3 class="text-2xl font-bold mb-2">{project.title}</h3>
            <p class="text-muted-foreground mb-4 flex-grow">{project.description}</p>
            
            <div class="flex flex-wrap gap-2">
              {project.techStack.map(tech => (
                <span class="text-xs px-3 py-1 rounded-full bg-muted text-muted-foreground">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-12">
      <a 
        href="https://github.com/arjit-32" 
        target="_blank" 
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 bg-card border border-border rounded-full hover:bg-muted transition-colors"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
          <path d="M9 18c-4.51 2-5-2-7-2"></path>
        </svg>
        View more projects on GitHub
      </a>
    </div>
  </Section>
</section>

<style>
  .project-card {
    transition: transform 0.3s ease;
  }
  
  .project-card:hover {
    transform: translateY(-5px);
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';
  
  gsap.registerPlugin(ScrollTrigger);
  
  document.addEventListener('DOMContentLoaded', () => {
    const projectCards = document.querySelectorAll('.project-card');
    
    // Create a staggered entrance animation for project cards
    gsap.fromTo(
      projectCards, 
      { 
        y: 50, 
        opacity: 0 
      }, 
      { 
        y: 0, 
        opacity: 1, 
        stagger: 0.1, 
        duration: 0.8,
        ease: "power3.out",
        scrollTrigger: {
          trigger: "#projects",
          start: "top 70%"
        }
      }
    );
  });
</script> 
